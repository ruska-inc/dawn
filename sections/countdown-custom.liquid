      "default": "leave"
    },
    {
      "type": "select",
      "id": "timer_position",
      "label": "Timer position",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ],
